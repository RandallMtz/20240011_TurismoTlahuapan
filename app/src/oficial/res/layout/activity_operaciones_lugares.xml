<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EditTCodigoPostalLugarOp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueMain"
    tools:context=".ActivityOperacionesLugares">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/custom_edittext"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView0"
                            android:layout_width="55dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="55dp"
                            android:layout_weight="0"
                            android:src="@drawable/itssmt" />

                        <TextView
                            android:id="@+id/TextViewAuxiliarLugares"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/TextVTituloLugaresOp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:text="Lugares"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="50dp"
                            android:layout_height="55dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:src="@drawable/newlogo"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/SpinnerLugaresBuscar"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:gravity="center"
                            android:padding="10dp"
                            android:spinnerMode="dialog" />

                        <Button
                            android:id="@+id/ButtonLugarBuscarOp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="0"
                            android:text="Buscar"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            app:backgroundTint="@color/blueSecond"
                            app:cornerRadius="15dp"
                            android:drawableRight="@drawable/baseline_search_24"
                            app:iconGravity="end"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTNombreLugarOp"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Nombre"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxAnimalBuscarOp" />

                        <Button
                            android:id="@+id/ButtonLimpiarCamposLugarOp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="0"
                            android:textSize="15sp"
                            app:backgroundTint="@color/blueSecond"
                            app:cornerRadius="15dp"
                            app:icon="@android:drawable/ic_delete"
                            app:iconGravity="textTop"
                            app:iconSize="40sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/SpCategoriaLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:padding="10dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTLatitudLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Latitud"
                            android:text="00000"
                            android:inputType="number|numberDecimal|numberSigned"
                            android:maxLength="25"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxAnimalBuscarOp" />

                        <EditText
                            android:id="@+id/EditTLongitudLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Longitud"
                            android:text="00000"
                            android:inputType="number|numberDecimal|numberSigned"
                            android:maxLength="25"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxNombreOp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTCostoEntradaLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:drawableRight="@drawable/baseline_attach_money_24"
                            android:hint="Costo de entrada"
                            android:inputType="number|numberDecimal"
                            android:maxLength="4"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxApePatOp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTCalleLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Calle"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxFechaOp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/EditTNoIntLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Núm. Interior"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <EditText
                            android:id="@+id/EditTNoExtLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Núm. Exterior"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxLocalidadOp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/SpinnerCodigoPostalLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:padding="10dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/SpinnerColoniaLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:padding="10dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/EditTFacebookLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Facebook"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <EditText
                            android:id="@+id/EditTInstagramLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Instagram"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxLocalidadOp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTTelefonoLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Teléfono"
                            android:drawableRight="@drawable/baseline_local_phone_24"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxFechaOp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center|start|center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/EditTCorreoLugarOp"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:background="@drawable/custom_edittext"
                            android:ems="10"
                            android:hint="Correo electrónico"
                            android:drawableRight="@drawable/baseline_alternate_email_24"
                            android:inputType="text|textEmailAddress"
                            android:padding="10dp"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/TxFechaOp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ButtonInsertarLugarOp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Registrar"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            app:backgroundTint="@color/blueSecond"
                            app:cornerRadius="15dp" />

                        <Button
                            android:id="@+id/ButtonModificarLugarOp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Modificar"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            app:backgroundTint="@color/blueSecond"
                            app:cornerRadius="15dp"
                            app:layout_constraintStart_toEndOf="@+id/BtInsertarUsuario"
                            app:layout_constraintTop_toBottomOf="@+id/TxNivAdmiOp" />

                        <Button
                            android:id="@+id/ButtonEliminarLugarOp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:text="Eliminar"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            app:backgroundTint="@color/blueSecond"
                            app:cornerRadius="15dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/BtModificarAnimalOp"
                            app:layout_constraintTop_toBottomOf="@+id/TxNivAdmiOp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>